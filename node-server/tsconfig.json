{
    "compilerOptions": {
        "outDir": "./build/src/",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowJs": true,
        "target": "es6",
        "moduleResolution": "node",
        "strictNullChecks": false,
        "noEmitOnError": true
    },
    "include": [
        "src/**/*"
    ]
}