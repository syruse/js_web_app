{
    "compilerOptions": {
        "outDir": "./build/src/",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowJs": true,
        "target": "es2017",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "strictNullChecks": false,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}